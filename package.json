{
  "name": "mateusz-strona",
  "version": "1.0.0",
  "description": "Strona dla Mateusza - reklamowa gazownika",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass scss/main.scss public/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass scss/main.scss public/css/style.comp.css",
    "concat:css": "concat -o public/css/style.concat.css public/icons/css/animation.css public/icons/css/fa-hammer-codes.css public/icons/css/fa-hammer-embedded.css public/icons/css/fa-hammer-ie7-codes.css public/icons/css/fa-hammer-ie7.css public/icons/css/fa-hammer.css public/css/style.comp.css",
    "prefix:css": "postcss -u autoprefixer -b \"last 10 version\" public/css/style.concat.css > public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/AdamBoczula/mateusz-majar.git"
  },
  "keywords": [
    "gas"
  ],
  "author": "Adam BOCZULA",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/AdamBoczula/mateusz-majar/issues"
  },
  "homepage": "https://gitlab.com/AdamBoczula/mateusz-majar#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.35",
    "postcss-cli": "^6.1.3"
  }
}
